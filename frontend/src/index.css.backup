@import "tailwindcss";

@plugin "daisyui" {
  themes: all;
}

/* Stream Chat - Complete Theme Integration with Tailwind/DaisyUI Colors */
.str-chat {
  /* Primary Colors */
  --str-chat__primary-color: hsl(var(--p));
  --str-chat__active-primary-color: hsl(var(--p));
  
  /* Background Colors */
  --str-chat__surface-color: hsl(var(--b1));
  --str-chat__secondary-surface-color: hsl(var(--b2));
  --str-chat__primary-surface-color: hsl(var(--b2));
  --str-chat__primary-surface-color-low-emphasis: hsl(var(--b3));
  
  /* Border Colors */
  --str-chat__border-color: hsl(var(--bc) / 0.15);
  
  /* Text Colors */
  --str-chat__text-color: hsl(var(--bc));
  --str-chat__text-low-emphasis-color: hsl(var(--bc) / 0.7);
  --str-chat__disabled-color: hsl(var(--bc) / 0.5);
  
  /* Message Colors */
  --str-chat__own-message-bubble-color: hsl(var(--p));
  --str-chat__own-message-text-color: hsl(var(--pc));
  --str-chat__message-bubble-color: hsl(var(--b2));
  
  /* Additional Theme Colors */
  --str-chat__secondary-color: hsl(var(--s));
  --str-chat__accent-color: hsl(var(--a));
  --str-chat__success-color: hsl(var(--su));
  --str-chat__warning-color: hsl(var(--wa));
  --str-chat__error-color: hsl(var(--er));
  
  /* Background for container */
  background-color: hsl(var(--b1));
  color: hsl(var(--bc));
}

/* Channel List Theme */
.str-chat__channel-list {
  background-color: hsl(var(--b2)) !important;
}

.str-chat__channel-preview-messenger {
  color: hsl(var(--bc)) !important;
}

.str-chat__channel-preview-messenger:hover {
  background-color: hsl(var(--b3)) !important;
}

.str-chat__channel-preview-messenger--active {
  background-color: hsl(var(--p) / 0.1) !important;
}

/* Message List Theme */
.str-chat__message-list {
  background-color: hsl(var(--b1)) !important;
}

/* Message Bubbles Theme */
.str-chat__message--me .str-chat__message-simple-text-inner {
  background-color: hsl(var(--p)) !important;
  color: hsl(var(--pc)) !important;
}

.str-chat__message--other .str-chat__message-simple-text-inner {
  background-color: hsl(var(--b2)) !important;
  color: hsl(var(--bc)) !important;
  border: 1.5px solid hsl(var(--bc) / 0.2);
}

/* Input Area Theme */
.str-chat__input-flat-wrapper {
  background-color: hsl(var(--b2)) !important;
  border-top: 1px solid hsl(var(--bc) / 0.15);
}

.str-chat__message-input {
  background-color: hsl(var(--b2)) !important;
}

.str-chat__message-textarea textarea {
  background-color: transparent !important;
  color: hsl(var(--bc)) !important;
}

.str-chat__message-textarea textarea::placeholder {
  color: hsl(var(--bc) / 0.6) !important;
}

/* Send Button Theme */
.str-chat__send-button {
  background-color: hsl(var(--p)) !important;
}

.str-chat__send-button svg {
  fill: hsl(var(--pc)) !important;
}

/* Emoji & File Upload Buttons */
.str-chat__input-emojiselect,
.str-chat__input-fileupload {
  color: hsl(var(--bc) / 0.7) !important;
}

.str-chat__input-emojiselect:hover,
.str-chat__input-fileupload:hover {
  color: hsl(var(--p)) !important;
}

/* Reaction Theme */
.str-chat__reaction-list {
  background-color: hsl(var(--b2)) !important;
  border: 1px solid hsl(var(--bc) / 0.15) !important;
}

.str-chat__message-reaction {
  background-color: hsl(var(--b1)) !important;
  border: 1px solid hsl(var(--bc) / 0.2) !important;
}

.str-chat__message-reaction:hover {
  background-color: hsl(var(--p) / 0.1) !important;
  border-color: hsl(var(--p)) !important;
}

.str-chat__message-reaction--mine {
  background-color: hsl(var(--p) / 0.15) !important;
  border-color: hsl(var(--p)) !important;
}

/* Thread Theme */
.str-chat__thread {
  background-color: hsl(var(--b1)) !important;
  border-left: 1px solid hsl(var(--bc) / 0.15) !important;
}

.str-chat__thread-header {
  background-color: hsl(var(--b2)) !important;
  border-bottom: 1px solid hsl(var(--bc) / 0.15) !important;
}

/* Message Actions Menu Theme */
.str-chat__message-actions-box {
  background-color: hsl(var(--b2)) !important;
  border: 1px solid hsl(var(--bc) / 0.15) !important;
}

.str-chat__message-actions-list-item {
  color: hsl(var(--bc)) !important;
}

.str-chat__message-actions-list-item:hover {
  background-color: hsl(var(--b3)) !important;
}

/* Quoted Message Theme */
.str-chat__quoted-message-preview {
  background-color: hsl(var(--b2)) !important;
  border-left-color: hsl(var(--p)) !important;
}

/* Date Separator Theme */
.str-chat__date-separator-line {
  background-color: hsl(var(--bc) / 0.3) !important;
}

.str-chat__date-separator-date {
  color: hsl(var(--bc) / 0.8) !important;
  background-color: hsl(var(--b1)) !important;
}

/* Avatar Theme */
.str-chat__avatar {
  border: 2px solid hsl(var(--b3));
}

/* Loading Indicator Theme */
.str-chat__loading-indicator {
  color: hsl(var(--p)) !important;
}

/* Emoji Picker Theme */
.str-chat__emoji-picker {
  background-color: hsl(var(--b2)) !important;
  border: 1px solid hsl(var(--bc) / 0.15) !important;
}

/* Attachment Theme */
.str-chat__message-attachment-card {
  background-color: hsl(var(--b2)) !important;
  border-color: hsl(var(--bc) / 0.2) !important;
}

/* Additional Container Theme Coverage */
.str-chat__container {
  background-color: hsl(var(--b1)) !important;
}

.str-chat__main-panel {
  background-color: hsl(var(--b1)) !important;
}

.str-chat__channel {
  background-color: hsl(var(--b1)) !important;
}

/* Message Text Colors */
.str-chat__message-text {
  color: hsl(var(--bc)) !important;
}

.str-chat__message-text p {
  color: inherit !important;
}

/* Message Metadata */
.str-chat__message-metadata {
  color: hsl(var(--bc) / 0.7) !important;
}

.str-chat__message-simple-status {
  color: hsl(var(--bc) / 0.7) !important;
}

.str-chat__message-timestamp {
  color: hsl(var(--bc) / 0.7) !important;
}

/* Message Username/Sender */
.str-chat__message-sender-name {
  color: hsl(var(--bc)) !important;
}

/* Empty State */
.str-chat__empty-channel {
  color: hsl(var(--bc) / 0.7) !important;
}

/* Typing Indicator */
.str-chat__typing-indicator {
  color: hsl(var(--bc) / 0.7) !important;
}

/* Message List Scrollbar */
.str-chat__message-list-scroll {
  background-color: hsl(var(--b1)) !important;
}

/* Virtual Message List */
.str-chat__virtual-message-list {
  background-color: hsl(var(--b1)) !important;
}

/* Window (Chat Window Container) */
.str-chat-window {
  background-color: hsl(var(--b1)) !important;
}

/* Message Simple Container */
.str-chat__message-simple {
  color: hsl(var(--bc)) !important;
}

/* Link Colors */
.str-chat__message-simple a {
  color: hsl(var(--p)) !important;
}

.str-chat__message-simple a:hover {
  color: hsl(var(--p)) !important;
  opacity: 0.8;
}

/* Channel Header Theme */
.str-chat__channel-header {
  background-color: hsl(var(--b2)) !important;
  border-bottom: 1px solid hsl(var(--bc) / 0.15) !important;
  color: hsl(var(--bc)) !important;
}

/* Message Input Wrapper */
.str-chat__input-flat {
  background-color: hsl(var(--b2)) !important;
}

/* Composer Theme */
.str-chat__composer {
  background-color: hsl(var(--b2)) !important;
}

/* Message Notification Theme */
.str-chat__message-notification {
  background-color: hsl(var(--p)) !important;
  color: hsl(var(--pc)) !important;
}

/* Scrollbar Theme */
.str-chat__message-list::-webkit-scrollbar {
  width: 8px;
}

.str-chat__message-list::-webkit-scrollbar-track {
  background: hsl(var(--b2));
}

.str-chat__message-list::-webkit-scrollbar-thumb {
  background: hsl(var(--bc) / 0.3);
  border-radius: 4px;
}

.str-chat__message-list::-webkit-scrollbar-thumb:hover {
  background: hsl(var(--bc) / 0.5);
}

/* Modal/Dialog Theme */
.str-chat__modal {
  background-color: hsl(var(--b1)) !important;
  border: 1px solid hsl(var(--bc) / 0.15) !important;
}

.str-chat__modal__header {
  background-color: hsl(var(--b2)) !important;
  border-bottom: 1px solid hsl(var(--bc) / 0.15) !important;
  color: hsl(var(--bc)) !important;
}

.str-chat__modal__close-button {
  color: hsl(var(--bc)) !important;
}

.str-chat__modal__close-button:hover {
  color: hsl(var(--er)) !important;
}

/* User Item Theme */
.str-chat__user-item {
  color: hsl(var(--bc)) !important;
}

.str-chat__user-item:hover {
  background-color: hsl(var(--b3)) !important;
}

/* Search Results Theme */
.str-chat__channel-search-result {
  color: hsl(var(--bc)) !important;
}

.str-chat__channel-search-result:hover {
  background-color: hsl(var(--b3)) !important;
}

/* Autocomplete Theme */
.str-chat__autocomplete-list {
  background-color: hsl(var(--b2)) !important;
  border: 1px solid hsl(var(--bc) / 0.15) !important;
}

.str-chat__autocomplete-list-item {
  color: hsl(var(--bc)) !important;
}

.str-chat__autocomplete-list-item:hover,
.str-chat__autocomplete-list-item--selected {
  background-color: hsl(var(--p) / 0.1) !important;
}

/* Gallery Theme */
.str-chat__gallery {
  background-color: hsl(var(--b1)) !important;
}

/* Image Preview Theme */
.str-chat__modal-image {
  background-color: hsl(var(--b1) / 0.95) !important;
}

/* Connection Status Theme */
.str-chat__connection-issue-notification {
  background-color: hsl(var(--wa)) !important;
  color: hsl(var(--bc)) !important;
}

/* System Message Theme */
.str-chat__message-system {
  background-color: hsl(var(--b2)) !important;
  color: hsl(var(--bc) / 0.7) !important;
  border: 1px solid hsl(var(--bc) / 0.15) !important;
}

/* Deleted Message Theme */
.str-chat__message--deleted {
  background-color: hsl(var(--b2)) !important;
  opacity: 0.6;
}

.str-chat__message--deleted-inner {
  color: hsl(var(--bc) / 0.7) !important;
  font-style: italic;
}

/* Message List Scroll Container */
.str-chat__message-list-scroll {
  background-color: hsl(var(--b1)) !important;
}

/* List Loading Indicator */
.str-chat__list__loading {
  background-color: hsl(var(--b2)) !important;
  color: hsl(var(--p)) !important;
}

/* List Items */
.str-chat__ul {
  background-color: transparent !important;
}

.str-chat__li {
  background-color: transparent !important;
}

/* Message Attachment File Item */
.str-chat__message-attachment-file--item {
  background-color: hsl(var(--b2)) !important;
  border: 1px solid hsl(var(--bc) / 0.2) !important;
  color: hsl(var(--bc)) !important;
}

.str-chat__message-attachment-file--item:hover {
  background-color: hsl(var(--b3)) !important;
  border-color: hsl(var(--p) / 0.3) !important;
}

.str-chat__message-attachment-file--item-text {
  color: hsl(var(--bc)) !important;
}

.str-chat__message-attachment-file--item-name {
  color: hsl(var(--bc)) !important;
}

.str-chat__message-attachment-file--item-size {
  color: hsl(var(--bc) / 0.7) !important;
}

.str-chat__message-attachment-file--item-download {
  color: hsl(var(--p)) !important;
}

.str-chat__message-attachment-file--item-download:hover {
  color: hsl(var(--p)) !important;
  opacity: 0.8;
}

/* File Icons */
.str-chat__file-icon {
  color: hsl(var(--bc)) !important;
}

/* Message Attachment Download Icon */
.str-chat__message-attachment-download-icon {
  fill: hsl(var(--p)) !important;
}

/* Message Error Icon */
.str-chat__message-error-icon {
  color: hsl(var(--er)) !important;
}

.str-chat__message-error-icon svg {
  fill: hsl(var(--er)) !important;
}

.str-chat__message-error-icon svg path {
  fill: hsl(var(--er)) !important;
}

/* Message Replies Count Button */
.str-chat__message-replies-count-button-wrapper {
  background-color: transparent !important;
}

.str-chat__message-replies-count-button {
  background-color: hsl(var(--b2)) !important;
  color: hsl(var(--p)) !important;
  border: 1px solid hsl(var(--p) / 0.3) !important;
}

.str-chat__message-replies-count-button:hover {
  background-color: hsl(var(--p) / 0.1) !important;
  border-color: hsl(var(--p)) !important;
}

/* Message Action Icons */
.str-chat__message-action-icon {
  fill: hsl(var(--bc) / 0.7) !important;
  color: hsl(var(--bc) / 0.7) !important;
}

.str-chat__message-action-icon:hover {
  fill: hsl(var(--p)) !important;
  color: hsl(var(--p)) !important;
}

/* Message Actions Box Button */
.str-chat__message-actions-box-button {
  background-color: transparent !important;
  color: hsl(var(--bc) / 0.7) !important;
}

.str-chat__message-actions-box-button:hover {
  background-color: hsl(var(--b2)) !important;
  color: hsl(var(--p)) !important;
}

/* Message Reply in Thread Button */
.str-chat__message-reply-in-thread-button {
  background-color: transparent !important;
  color: hsl(var(--bc) / 0.7) !important;
}

.str-chat__message-reply-in-thread-button:hover {
  background-color: hsl(var(--b2)) !important;
  color: hsl(var(--p)) !important;
}

/* Message Reactions Button */
.str-chat__message-reactions-button {
  background-color: transparent !important;
  color: hsl(var(--bc) / 0.7) !important;
}

.str-chat__message-reactions-button:hover {
  background-color: hsl(var(--b2)) !important;
  color: hsl(var(--p)) !important;
}

/* Message Options */
.str-chat__message-options {
  background-color: hsl(var(--b1) / 0.9) !important;
  backdrop-filter: blur(8px);
}

/* Message Actions Container */
.str-chat__message-actions-container {
  background-color: transparent !important;
}

/* Message Reaction Emoji */
.str-chat__message-reaction-emoji {
  color: hsl(var(--bc)) !important;
}

.str-chat__message-reaction-count {
  color: hsl(var(--bc)) !important;
}

/* Message Reaction Own (User's Reactions) */
.str-chat__message-reaction-own {
  background-color: hsl(var(--p) / 0.2) !important;
  border-color: hsl(var(--p)) !important;
}

.str-chat__message-reaction-own:hover {
  background-color: hsl(var(--p) / 0.3) !important;
}

/* Message Reactions Host/Container */
.str-chat__message-reactions-host {
  background-color: transparent !important;
}

.str-chat__message-reactions-container {
  background-color: hsl(var(--b1)) !important;
  border: 1px solid hsl(var(--bc) / 0.15) !important;
}

.str-chat__message-reactions {
  background-color: transparent !important;
}

/* Message Inner */
.str-chat__message-inner {
  background-color: transparent !important;
}

/* Message Bubble (Contains attachment/text) */
.str-chat__message-bubble {
  background-color: transparent !important;
}

/* Message with Thread Link */
.str-chat__message-with-thread-link {
  background-color: transparent !important;
}

/* Message with Reactions */
.str-chat__message--with-reactions {
  background-color: transparent !important;
}

/* Message Has No Text */
.str-chat__message.has-no-text {
  background-color: transparent !important;
}

/* Message Has Attachment */
.str-chat__message--has-attachment {
  background-color: transparent !important;
}